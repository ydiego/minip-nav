page {
  box-sizing: border-box;
  padding-bottom: calc(env(safe-area-inset-bottom) + 96rpx);
  background: #f5f5f5;
}

.home-page-header {
  background: linear-gradient(#fff, #f5f5f5);
}

.home-page-header .swiper-item-wrap {
  display: flex;
  justify-content: center;
  align-items: center;
}

.home-page-header .t-image__swiper {
  width: 100%;
  height: 100%;
}

.home-page-container .t-class-item {
  color: #333333 !important;
  font-size: 32rpx;
}

.home-page-container .t-class-track {
  background-color: #fa4126 !important;
  height: 6rpx !important;
  border-radius: 4rpx !important;
  width: 48rpx !important;
}

.t-class-indicator,
.loading-text {
  color: #b9b9b9 !important;
}

.entries {
  display: flex;
  justify-content: space-between;
  padding: 24rpx 48rpx;
  background: #fff;
  margin-top: 24rpx;
}

.entry-item {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  font-size: 24rpx;
}

.entry-item .entry-icon {
  background-color: #8a4035;
  border-radius: 24rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  width: 120rpx;
  height: 120rpx;
  margin-bottom: 24rpx;
}

.entry-item .entry-icon image {
  width: 90rpx;
  height: 100rpx;
}

.list-all {
  margin: 24rpx 24rpx 0;
  padding: 24rpx;
  background-color: #fff;
}