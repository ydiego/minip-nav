page {
  box-sizing: border-box;
  padding-bottom: calc(env(safe-area-inset-bottom) + 96rpx);
  background: #f5f5f5;
}

.home-page-header {
  background: linear-gradient(#fff, #f5f5f5);
}

.home-page-container {
  background: #f5f5f5;
  display: block;
  padding: 0 24rpx;
}



.home-page-header .swiper-wrap {
  margin-top: 20rpx;
}

.home-page-header .swiper-item-wrap {
  display: flex;
  justify-content: center;
  align-items: center;
}

.home-page-header .t-image__swiper {
  width: 100%;
  height: 100%;
  border-radius: 10rpx;
}

.list-container .list-item {
  background: #fff;
  margin-bottom: 24rpx;
  padding: 8rpx;
  display: flex;
  border-radius: 10rpx;

}

.list-container .list-item .detail {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
}

.list-container .list-item .detail .header {
  font-size: 32rpx;
  display: flex;
  justify-content: space-between;
  padding-right: 12rpx;
}

.list-container .list-item .detail .header .ongoing {
  color: #6de86d;
}

.list-container .list-item .detail .header .coming {
  color: #ff6600;
}

.list-container .list-item .detail .body {
  display: flex;
  align-items: baseline;
  margin-bottom: 12rpx;
}

.list-container .list-item .detail .name {
  display: block;
  margin-right: 12rpx;
}

.list-container .list-item .detail .desc {
  display: -webkit-box;
  flex: 1;
  overflow: hidden;
  text-overflow: ellipsis;
  word-wrap: break-word;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
  color: #a5a5a5;
  font-size: 28rpx;
}

.list-container .list-item image {
  width: 128rpx;
  height: 128rpx;
  border-radius: 25rpx;
  margin-right: 12rpx;
}

.list-container .list-item .header {
  font-size: 24rpx;
}

.home-page-container .t-class-item {
  color: #333333 !important;
  font-size: 32rpx;
}

.home-page-container .t-class-track {
  background-color: #fa4126 !important;
  height: 6rpx !important;
  border-radius: 4rpx !important;
  width: 48rpx !important;
}

.t-class-indicator,
.loading-text {
  color: #b9b9b9 !important;
}

.entries {
  display: flex;
  justify-content: space-between;
  padding: 24rpx 48rpx;
  background: #fff;
}

.entry-item {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  font-size: 36rpx;
}

.entry-item .entry-icon {
  background-color: #8a4035;
  border-radius: 24rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  width: 120rpx;
  height: 120rpx;
  margin-bottom: 24rpx;
}

.entry-item .entry-icon image {
  width: 90rpx;
  height: 100rpx;
}