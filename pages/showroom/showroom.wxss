.showroom-container {
  padding: 0 36rpx 88rpx 36rpx;
}

.showroom-list {
  margin-top: 48rpx;
}

.showroom-item {
  border-radius: 24rpx;
  overflow: hidden;
  margin-bottom: 48rpx;
}

.image-wrap {
  width: 100%;
  height: 300rpx;
  overflow: hidden;
}

.item-body {
  padding: 24rpx;
}

.item-header {
  display: flex;
  justify-content: space-between;
  font-size: 40rpx;
  align-items: center;
}

.item-header .status {
  font-size: 28rpx;
  padding: 8rpx;
  border-radius: 8rpx;
  color: #FFF;
}

.item-header .status.ing {
  background-color: #7ec458;
}

.item-header .status.done {
  background-color: #4777af;
}

.item-body .time {
  font-size: 22rpx;
  font-weight: bold;
  margin-top: 12rpx;
}