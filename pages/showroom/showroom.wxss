.showroom-container {
  padding: 0 36rpx 88rpx 36rpx;
  padding-bottom: calc(constant(safe-area-inset-bottom) + 88rpx);
  padding-bottom: calc(env(safe-area-inset-bottom) + 88rpx);
}

.showroom-list {
  margin-top: 24rpx;
}

.showroom-item {
  border-radius: 24rpx;
  overflow: hidden;
  margin-bottom: 24rpx;
}

.image-wrap {
  width: 100%;
  height: 300rpx;
  overflow: hidden;
}

.image-wrap image {
  width: 100%;
}

.item-body {
  padding: 12rpx 24rpx;
}

.item-header {
  display: flex;
  justify-content: space-between;
  font-size: 32rpx;
  align-items: center;
}

.item-header .status {
  font-size: 20rpx;
  padding: 8rpx 9rpx;
  border-radius: 8rpx;
  color: #FFF;
}

.item-header .status.ing {
  background-color: #7ec458;
}

.item-header .status.done {
  background-color: #4777af;
}

.item-body .time {
  display: flex;
  align-items: center;
  font-size: 24rpx;
  font-weight: bold;
  margin-top: 12rpx;
  color: #5a5a5a;
}